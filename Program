INIT : CLR C
	   MOV R1,#00H
	   MOV R7,#01H
	   MOV A,#00H
SJMP START

START : CPL A
	    MOV P1,A
	    CALL DELAY
	    CPL A
	    MOV R2,A
	    MOV A,R1
	    CPL A
	    MOV P1,A
	    MOV A,R2
	    MOV B,R7
	    ADD A,B
	    JC INIT
SJMP START

DELAY : MOV R3,#02
LOOP1 : MOV R4,#255
LOOP2 : MOV R5,#255
LOOP3 : DJNZ R5,LOOP3
	    DJNZ R4,LOOP2
	    DJNZ R3,LOOP1
RET
